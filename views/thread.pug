head 
    include include/head.pug
    title Thread#{thread.id}
body
    div(class="container")
        div(class="box center")
            h1(class="box-header text-center")
                | Reply
            div(class="box-content")
                if session.loggedIn == true
                    form(action="/forums/"+forum.id+"/post" method="POST")
                        div(class="stacked-list")
                            textarea(name="content" id="content" class="post-textarea" placeholder="Content. Minimum word count is "+config.posts.wordCount.minimum maxlength=config.posts.maxPostLength required)
                            button(type="submit") Post
                else
                    span(class="text-center") You must be 
                        a(href="/login") logged in
                        |  to post.
        div(class="box center")
            h1(class="box-header") Thread#{thread.id}
            div(class="box-content")
                - var date = new Date(thread.creation)
                p Created by #{thread.username}
                p(class="grey italics") #{date.toLocaleString()}
                hr
                p(class="thread-content") #{thread.content}
        each post in posts 
            div(class="box center")
                div(class="box-content")
                    - var date = new Date(post.creation)
                    p Created by #{post.username}
                    p(class="grey italics") #{date.toLocaleString()}
                    hr
                    p(class="post-content") #{post.content}

