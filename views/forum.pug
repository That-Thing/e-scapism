head
    include include/head.pug
    title #{forum.name}
body
    div(class="container")
        div(class="box center")
            h1(class="box-header text-center")
                | #{forum.name}
            div(class="box-content")
                if loggedIn == true
                    form(action="/forums/"+forum.id+"/post" method="POST")
                        div(class="stacked-list")
                            textarea(name="content" id="content" class="post-textarea" placeholder="Content. Minimum word count is "+config.posts.wordCount.minimum maxlength=config.posts.maxPostLength required)
                            button(type="submit") Post
                else
                    span(class="text-center") You must be 
                        a(href="/login") logged in
                        |  to post.
        div(class="box center")
            h1(class="box-header text-center")
                | Posts
            div(class="box-content")
                if posts.length > 0
                    each post in posts
                        div(class="post")
                            div(class="post-header")
                                span #{post.owner}
                                span(class="ml-1 italics grey") #{post.date}
                            div(class="post-content")
                                p #{post.content} 
                else
                    p(class="text-center") No posts yet.